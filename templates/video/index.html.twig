{% extends 'base.html.twig' %}

{% block title %}Liste des Vidéos{% endblock %}

{% block body %}
    <h1>Liste des Vidéos</h1>

    {% if videos is not empty %}
        <div class="video-list">
            {% for video in videos %}
                <div class="video-item">
                    <h2>{{ video.titre }}</h2>
                    <img src="{{ video.image }}" alt="{{ video.titre }}">
                    <p>Date de publication : {{ video.datePublication ? video.datePublication|date('Y-m-d') : 'Non spécifiée' }}</p>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucune vidéo disponible pour le moment.</p>
    {% endif %}
{% endblock %}
